/**:
  ros__parameters:
    hw_platform: laptop
    use_axis_camera: false

controller:
  ros__parameters:
    base_frame: base_link
    baudrate: 115200
    odom_frame: odom
    publish_tf: true
    read_data:
      list:
        - v_batt
        - motor_status
      motor_status:
        default: 0
        type: int
      v_batt:
        default: 0.0
        type: double
    robot_type: lizard
    # This is now overridden by fixusb.py, but updated here for consistency
    serial_port: /dev/ttyACM1 
    use_lizard: true

tf_base_link_imu:
  ros__parameters:
    rotation: [0.0, 0.0, 0.0, 1.0]
    translation: [0.0, 0.0, 0.0]

tf_imu_gnss:
  ros__parameters:
    rotation: [0.0, 0.0, 0.0, 1.0]
    translation: [0.0, 0.0, 0.0]

tf_imu_vsm:
  ros__parameters:
    rotation: [0.0, 0.0, 0.0, 1.0]
    translation: [0.0, 0.0, 0.0]

ublox_gps_node:
  ros__parameters:
    device: /dev/ttyACM0
    baudrate: 115200
    frame_id: gps
    # CRITICAL: Stop the data flood
    inf:
      all: false
    publish:
      all: false
      nav:
        pvt: true
        sat: true
    # Set frequency to 1Hz for stability
    meas_rate: 1000 
    nav_rate: 1

web_ui:
  ros__parameters:
    host: 0.0.0.0
    port: 8080
